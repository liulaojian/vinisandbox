<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - V1n1S4ndB0x</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"  type="text/javascript"></script>
	    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js" type="text/javascript"></script>        
	    <link href="http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css" rel="stylesheet" type="text/css" />
	        
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
                                                       
        @RenderSection("Header", false)
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left" style="margin-bottom:6px;">
                    <div class="float-left">
                        <img src="~/Content/images/biohazard.png" width="72px" height="72px" />
                    </div>
                    <p class="site-title">@Html.ActionLink("V1N1S4NDB0X", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            @if(User.IsInRole("admin"))
                            {
                                <li>@Html.ActionLink("Usuarios", "Index", "User")</li>
                            }
                            @if (Request.IsAuthenticated)
                            {
                                <li>@Html.ActionLink("Arquivos", "Index", "File")</li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - V1n1S4ndb0x</p>
                </div>
            </div>
        </footer>
        
        @RenderSection("scripts", required: false)
    </body>
</html>
