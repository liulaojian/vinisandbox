@using MvcContrib.UI.Grid;
@using MvcContrib.Pagination;
@using MvcContrib.Shp.UI.Themed.Pager;

<div class="mc-grid ui-widget ui-widget-content ui-corner-all">
    <div class="mc-grid-header ui-widget-header ui-corner-top">Lista de Arquivos</div>        
    @Html.MvcContrib().Grid((IPagination<ViniSandbox.Models.file>)ViewBag.data).WithModel(new WebViniSandbox.Models.FileGridModel()).Sort(ViewData["sort"] as GridSortOptions).Attributes(id => "grid", style => "width: 100%;")
    @Html.MvcContrib().PagerThemed((IPagination<ViniSandbox.Models.file>)ViewBag.data)
</div>