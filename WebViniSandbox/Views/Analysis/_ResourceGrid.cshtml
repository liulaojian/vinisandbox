@using MvcContrib.UI.Grid;
@using MvcContrib.Pagination;
@using MvcContrib.Shp.UI.Themed.Pager;

@model IPagination<ViniSandbox.Models.resource>

<div class="mc-grid ui-widget ui-widget-content ui-corner-all">
    <div class="mc-grid-header ui-widget-header ui-corner-top">Resources</div>        
    @Html.MvcContrib().Grid(Model).WithModel(new WebViniSandbox.Models.GridModel.ResourceGridModel()).Sort(ViewData["sort"] as GridSortOptions).Attributes(id => "grid", style => "width: 100%;")
    @Html.MvcContrib().PagerThemed(Model)
</div>